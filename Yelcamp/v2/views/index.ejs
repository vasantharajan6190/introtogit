<% include partials/header  %>
<div class="container">
<header class="jumbotron">
<div class="container">
<h1>KARTHI CAMPING SERVICES</h1>
<h2>Best Camping Places</h2>
<h1><a  class="btn btn-primary btn-large" href="/campground/new">ADD new Camp</a></h1>
<a href="/" class="btn btn-primary btn-large">HOME</a>
</div>
</header>
<div class ="row text-center"  style="display:flex;flex-wrap:wrap;">
    <% camp.forEach(function(camp){ %>
    <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
         <img src="<%= camp.img %>">
         <div class="caption">
             <h3> <%= camp.name %></h3>
         </div>
         <p>
             <a href="/campground/<%=camp._id %>" class="btn btn=primary">More info</a>
         </p>
    </div>
    </div>
        <% }) %>
        </div>

</div>
<% include partials/footer  %>